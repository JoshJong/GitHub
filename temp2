var upperCase='ABC';
(function(){
   var upperCase ="DEF";
   
   (function(){   
      var upperCase ="GHI";       // GHI
      console.log(upperCase);
   })();
})();   

var upperCase='ABC';
(function(){
   var upperCase ="DEF";   <- this variable is hard to be accessed
   
   (function(){  
      var upperCase ="GHI";
      console.log(window.upperCase);  //ABC
   })();     
})();


