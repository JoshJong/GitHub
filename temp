/* in mathmatic operation : obj *5  */
var obj = {}
obj *5    //xx
obj.valueOf = function(){return 5}
obj*5  //vv   obj's valueOf  has special role in this case
obj.toString = function(){return 7} // toString is the 2nd priority for mathematic operation
